{% extends 'registration/registerbase.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1>Register</h1>
    {{ form_start(registrationForm,{'attr': {'novalidate': 'novalidate'}}) }}
    {{ form_row(registrationForm.email, {'attr': {'class': 'form-control form-control-user'}}) }}
    {{ form_row(registrationForm.password.first, {'attr': {'class': 'form-control form-control-user'}}) }}
    {{ form_row(registrationForm.password.second, {'attr': {'class': 'form-control form-control-user'}}) }}
    {{ form_row(registrationForm.firstname, {'attr': {'class': 'form-control form-control-user'}}) }}
    {{ form_row(registrationForm.lastname, {'attr': {'class': 'form-control form-control-user'}}) }}
    {{ form_row(registrationForm.age, {'attr': {'class': 'form-control form-control-user'}}) }}
    {{ form_row(registrationForm.phonenumber, {'attr': {'class': 'form-control form-control-user'}}) }}
    {{ form_row(registrationForm.roles, {'attr': {'class': 'form-control form-control-user'}}) }}
    {{ form_row(registrationForm.image) }}
    {{ form_row(registrationForm.captcha) }}

    <br>
    <button type="submit" class="btn btn-primary">Register</button>

    {{ form_end(registrationForm) }}
{% endblock %}
