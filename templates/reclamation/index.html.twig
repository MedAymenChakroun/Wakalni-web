{% extends 'base-back.html.twig' %}

{% block title %}Reclamation index{% endblock %}

{% block body %}
    <h1>Reclamation </h1>
    <table class="table">
        <thead>
        <tr>
            <th>Sujet</th>
            <th>Contenu</th>
            <th>etat</th>
            <th>actions</th>


        </tr>
        </thead>

        <label>Search:<input class="form-control form-control-sm" onkeyup="Searchuser()" type="text" id="search" placeholder="Search"></label>
        <tbody>
        {% for reclamation in reclamations %}
            <tr>
                <td>{{ reclamation.sujet }}</td>
                <td>{{ reclamation.contenu }}</td>
                <td>{{ reclamation.etat }}</td>

                <td>
                    <button><a href="{{ path('app_reclamation_show', {'reclamationid': reclamation.reclamationid}) }}">show</a></button>
                    {% if (reclamation.etat !="Valider") %}
                        <button><a href="{{ path('app_reponse_newV', {'idR': reclamation.reclamationid,'state':"Valider"}) }}">Valider</a></button>
                    {% endif %}
                    {% if (reclamation.etat !="Réfuser") %}
                        <button><a href="{{ path('app_reponse_newV', {'idR': reclamation.reclamationid,'state':"Réfuser"}) }}">Réfuser</a></button>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <script src="{{ asset('js/jquery.min.js') }}"></script>
    <script>
        function Searchuser() {
            let searchString = document.getElementById('search').value; // recuperation de l'input de la recherche
            const elements = document.getElementsByName('elements') //recuperation de la reference du dom (liste des tr)
            if (searchString.length!==0){
                $.ajax({
                    url: '/search/'+searchString,
                    success: function (data) {
                        console.log("data :",data)
                        for (let i = 0; i < elements.length; i++){
                            elements[i].style.display = "none";
                        }
                        for (let j = 0; j < data.length; j++) {
                            $('#etudiant'+data[j].id).show('slow');
                        }
                    },
                    error: function (xhr, textStatus, errorThrown) {
                        alert("erreur lors de la recuperation des données")
                    }
                });
            }else{
                for (let i = 0; i < elements.length; i++){
                    elements[i].style.display = "revert";
                }
            }
        }
    </script>


    <button><a href="{{ path('app_reclamation_new') }}">Create new</a></button>
{% endblock %}
