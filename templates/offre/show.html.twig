{% extends 'base-front.html.twig' %}
{% block title %}Offre index
{% endblock %}
{% block body %}
	<h1>Offre</h1>

	<div class="container" style="background: white; padding-bottom: 50px;border-radius: 40px;">
		<div
			class="col-md-6">
			<!--carousel-->
			<div
				id="main_area">
				<!-- Slider -->
				<div class="row" style="margin-top: 25px;">


					<div
						class="col-xs-12 less-padding" id="slider">
						<!-- Top part of the slider -->
						<div class="row">
							<div
								class="col-sm-12" id="carousel-bounding-box">

								<!-- Carousel items -->
								<div class="carousel-inner">
									<div class="item next left" data-slide-number="0">
										<img src="{{ vich_uploader_asset(offre.produitid, 'image') }}" alt="{{ offre.produitid.nom }}" style="border-radius: 20px;">
									</div>

									<div class="item active left" data-slide-number="1">
										<img src="{{ vich_uploader_asset(offre.produitid, 'image') }}" alt="{{ offre.produitid.nom }}">
									</div>

								</div>

							</div>
						</div>
					</div>

					<!--/Slider-->


				</div>

			</div>
			<!--carousel ends-->
		</div>

		<div class="col-md-6" style="position: relative;">
			<div class="bookmarked" style="display: none;"><img src="images/bookmarked.png" width="86">
			</div>
			<h1>{{ offre.produitid.nom }}</h1>


			<div class="row">
				<div class="col-md-10">
					<a href="channelDetail.html" class="text-secondary">
						<h4>{{ offre.produitid.crid.nom }}</h4>
					</a>
					<h4>Location: Kebon Jeruk, Jakarta Barat</h4>

				</div>
				<div class="col-md-2"><img src="https://i.ibb.co/HGLzPf0/halal.png" width="60">
				</div>
			</div>


			{# <form action="{{ path('app_produit_showw',{'produitid': produit.produitid}) }}" method="post"> #}
	          {# <form action="{{ path('app_produit_showw', {'produitid': produit.produitid}) }}" method="POST"> #}
			  {# <input type="number" id="quantityNumber" name="quantity" onchange="myFunction()"/> #}


				{# </form> #}

				<p class="product-description">Cemilan tradisional dari daerah Jawa
                , berisi irisan ayam berbumbu tradisional, dibalut dan digoreng dengan telur
                , sangat menggugah selera. Cocok untuk acara keluarga, meeting, dan moment lainnya.
                 Bahan - bahan yang kami gunakan sangat terjaga kualitas dan kebersihannya.</p>

				<div class="product-detail-tag-container">
					<button class="btn outline-white-button">Healty</button>
					<button class="btn outline-white-button">Tradisional</button>
					<button class="btn outline-white-button">Cemilan Ringan</button>
					<button class="btn outline-white-button">Side Dish</button>
				</div>

				<div class="clearfix"></div>

				<div class="row">
					<div class="col-md-6">
						<h3>{{ offre.prix}} TND</h3>
					</div>
					<div class="col-md-6" style="padding-top: 18px;">
						<p class="pull-left" style="line-height: 35px; margin-right: 20px;">Quantite</p>
						<form class="form-inline product-detail-form">
							<div class="form-group pull-left">
								{# <button class="btn btn-default">-</button> #}
							</div>
							<div class="form-group pull-left">
								<input type="number" class="form-control number-input"id="quantityNumber" name="quantity" onchange="myFunction()" placeholder="1" style="width: 60px; border: none; font-weight: bold; font-size: 20px;">
							</div>
							<div class="form-group">
								{# <button class="btn btn-default">+</button> #}
							</div>
						</form>
					</div>
				</div>

				<div class="product-detail-action-button-container">
					<button class="btn button-add-to-bag" style="margin-right: 10px;">
						<a href="{{ path('app_offre_showw', {'offreid': offre.offreid}) }} " style="color : white" type="submit">Ajouter</a>
					</button>

				<button class="btn btn-default button-black button-learn-more" id="bookmarkButton">
					<a href="{{ path('app_offre_index') }}" style="color : white">Retour a la liste</a>
				</button>
				{# <button class="btn btn-default button-black button-learn-more" id="deleteBookmarkButton" style="display: none;">Delete Favourite</button> #}
			</div>
				{# </form> #}


		</div>
	</div>
