		function myFunction() {
					var x = document.getElementById("quantityNumber").value ? document.getElementById("quantityNumber").value : 1;
					document.cookie = "quantity" + "=" + x + ";";

				}
          $.ajax({
            url: baseUrl+"/offre/x/showw", 
