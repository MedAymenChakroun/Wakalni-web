<!DOCTYPE html>

<title>Review index</title>

{% block body %}
    <h1>Review index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Reviewid</th>
                <th>Note</th>
                <th>Commentaire</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for review in reviews %}
            <tr>
                <td>{{ review.reviewid }}</td>
                <td>{{ review.note }}</td>
                <td>{{ review.commentaire }}</td>
                <td>
                    <a href="{{ path('app_review_show', {'reviewid': review.reviewid}) }}">show</a>
                    <a href="{{ path('app_review_edit', {'reviewid': review.reviewid}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_review_new') }}">Create new</a>
{% endblock %}
