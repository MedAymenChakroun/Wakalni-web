{% extends 'base-back.html.twig' %}

{% block title %}Leftovers index{% endblock %}

{% block body %}
    <h1>Leftovers index</h1>
    <form role="search" class="sr-input-func">
        <input type="text" placeholder="Search..." class="search-int form-control" name="search">
        <a href="#"><i class="fa fa-search"></i></a>
    </form>
    <button></button>
    <table class="table">
        <thead>
            <tr>

                <th>Sujet</th>
                <th>Type</th>
                <th>Quantite</th>
                <th>Dateexpiration</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for leftover in leftovers %}
            <tr>

                <td>{{ leftover.sujet }}</td>
                <td>{{ leftover.type }}</td>
                <td>{{ leftover.quantite }}</td>
                <td>{{ leftover.dateexpiration ? leftover.dateexpiration|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_leftovers_show', {'leftoverid': leftover.leftoverid}) }}">detail</a>
                    <a href="{{ path('app_leftovers_edit', {'leftoverid': leftover.leftoverid}) }}">modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">tableau vide</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
<div class="navigation">
    {{ knp_pagination_render(leftovers) }}
</div>
    <a href="{{ path('app_leftovers_new') }}">Ajouter</a>
    <a style="padding-left: 20px" href="{{ path('leftovers_stats') }}">Stats</a>
{% endblock %}
