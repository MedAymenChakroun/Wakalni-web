{% block title %}Leftover{% endblock %}

{% block body %}
    <h1>Leftovers</h1>

    <table class="table">
        <tbody>

            <tr>
                <th>Sujet</th>
                <td>{{ leftover.sujet }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ leftover.type }}</td>
            </tr>
            <tr>
