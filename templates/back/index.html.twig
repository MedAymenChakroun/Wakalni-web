{% extends 'backbase.html.twig' %}


{% block title %}
    List des utilisateurs
{% endblock %}

{% block body %}
<html>

<body>

<style>


</style>

<!-- DataTales Example -->
<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary" style="color:orange!important">List des utilisateurs</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <div class="row">
                    <div class="col-sm-12 col-md-6">
                        <div id="dataTable_filter" class="dataTables_filter">
                            <label>Search:<input class="form-control form-control-sm" onkeyup="Searchuser()" type="text" id="search" placeholder="Search">
                            </label>
                        </div>
                    </div>
                </div>
                <div id="affichage">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nom</th>
                            <th>Prenom</th>
                            <th>Email</th>
                            <th>Telephone</th>
                            <th>Age</th>
                            <th>Role</th>
                            <th>Image</th>

                        </tr>
                        </thead>
                        <tbody>
                        {% for user in u %}
                            <tr name="elements" id="{{ 'etudiant'~ user.id}}">
                                <td>{{ user.id}}</td>
                                <td>{{ user.firstname }}</td>
                                <td>{{ user.lastname }}</td>
                                <td>{{ user.email }}</td>
                                <td>{{ user.phonenumber }}</td>
                                <td>{{ user.age }}</td>
                                <td>{{ user.roles[0] }}</td>
                                <td><img class="img-profile "
                                         src="{{ asset('uploads_directory/'~user.image) }}"
                                         width="80"
                                         height="80">
                                </td>
                                <td>
                                    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                                </td>
                                <td>
                                    <a> {{ include('back/delete_user.html.twig') }}  </a>
                                </td>

                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>

                <script src="{{ asset('js/jquery.min.js') }}"></script>
                <script>
                    function Searchuser() {
                        let searchString = document.getElementById('search').value; // recuperation de l'input de la recherche
                        const elements = document.getElementsByName('elements') //recuperation de la reference du dom (liste des tr)
                        if (searchString.length!==0){
                            $.ajax({
                                url: '/search/'+searchString,
                                success: function (data) {
                                    console.log("data :",data)
                                    for (let i = 0; i < elements.length; i++){
                                        elements[i].style.display = "none";
                                    }
                                    for (let j = 0; j < data.length; j++) {
                                        $('#etudiant'+data[j].id).show('slow');
                                    }
                                },
                                error: function (xhr, textStatus, errorThrown) {
                                    alert("erreur lors de la recuperation des donnÃ©es")
                                }
                            });
                        }else{
                            for (let i = 0; i < elements.length; i++){
                                elements[i].style.display = "revert";
                            }
                        }
                    }
                </script>
            </div>
        </div>
    </div>
</div>


{% endblock %}